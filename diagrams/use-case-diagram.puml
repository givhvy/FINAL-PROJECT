@startuml UniLearn_Use_Case_Diagram

' ============================================
' UniLearn System Use Case Diagram
' Figure 4.0: UniLearn System Use Case Diagram
' 39 Use Cases | 3 Actors | 8 Functional Areas
' ============================================

' Layout direction - Left to Right for better visualization
left to right direction

' Theme and Styling
skinparam backgroundColor #FFFFFF
skinparam handwritten false
skinparam linetype ortho

skinparam usecase {
    BackgroundColor #FAFAFA
    BorderColor #333333
    ArrowColor #333333
    FontSize 10
}

skinparam actor {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontSize 11
}

skinparam package {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontSize 12
    FontStyle bold
}

skinparam rectangle {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontSize 14
    FontStyle bold
}

' ============================================
' ACTORS (positioned on the left)
' ============================================
actor "Student" as Student
actor "Teacher" as Teacher
actor "Administrator" as Admin

' ============================================
' SYSTEM BOUNDARY
' ============================================
rectangle "UniLearn Learning Management System" {

    ' ----------------------------------------
    ' ROW 1: Authentication & Course Management
    ' ----------------------------------------
    package "Authentication" {
        usecase "UC1 Register Account" as UC1
        usecase "UC2 Login with Email/Password" as UC2
        usecase "UC3 Login with Google OAuth" as UC3
        usecase "UC4 Reset Password" as UC4
        usecase "UC5 Logout" as UC5
    }

    package "Course Management" {
        usecase "UC6 Browse Course Catalog" as UC6
        usecase "UC7 Search/Filter Courses" as UC7
        usecase "UC8 View Course Details" as UC8
        usecase "UC9 Enroll in Course" as UC9
        usecase "UC10 Access Course Content" as UC10
        usecase "UC11 Watch Video Lessons" as UC11
        usecase "UC12 Mark Lesson Complete" as UC12
        usecase "UC13 Track Progress" as UC13
    }

    ' ----------------------------------------
    ' ROW 2: Assessment (linked from Course)
    ' ----------------------------------------
    package "Assessment" {
        usecase "UC14 Take Quiz" as UC14
        usecase "UC15 Submit Quiz Answers" as UC15
        usecase "UC16 View Quiz Results" as UC16
        usecase "UC17 View Grades" as UC17
    }

    ' ----------------------------------------
    ' ROW 3: Certification
    ' ----------------------------------------
    package "Certification" {
        usecase "UC18 Generate Certificate" as UC18
        usecase "UC19 Download Certificate PDF" as UC19
        usecase "UC20 Verify Certificate" as UC20
    }

    ' ----------------------------------------
    ' ROW 4: Payment
    ' ----------------------------------------
    package "Payment" {
        usecase "UC21 View Subscription Plans" as UC21
        usecase "UC22 Purchase Pro Subscription" as UC22
        usecase "UC23 View Payment History" as UC23
    }

    ' ----------------------------------------
    ' ROW 5: Community
    ' ----------------------------------------
    package "Community" {
        usecase "UC24 Join Study Group" as UC24
        usecase "UC25 Post in Group Forum" as UC25
        usecase "UC26 View Leaderboard" as UC26
    }

    ' ----------------------------------------
    ' TEACHER FUNCTIONS
    ' ----------------------------------------
    package "Teacher Functions" {
        usecase "UC27 Create Course" as UC27
        usecase "UC28 Edit Course" as UC28
        usecase "UC29 Delete Course" as UC29
        usecase "UC30 Create Quiz" as UC30
        usecase "UC31 Manage Questions" as UC31
        usecase "UC32 View Student Progress" as UC32
        usecase "UC33 Manage Lessons" as UC33
    }

    ' ----------------------------------------
    ' ADMIN FUNCTIONS
    ' ----------------------------------------
    package "Admin Functions" {
        usecase "UC34 Manage Users" as UC34
        usecase "UC35 Manage All Courses" as UC35
        usecase "UC36 View Analytics Dashboard" as UC36
        usecase "UC37 Monitor Payments" as UC37
        usecase "UC38 Manage Certificates" as UC38
        usecase "UC39 Manage Blog Posts" as UC39
    }
}

