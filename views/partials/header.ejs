<script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
        const menu = document.getElementById('mobile-menu');
        if (menu.style.maxHeight === '0px' || menu.style.maxHeight === '') {
            menu.style.maxHeight = '500px';
        } else {
            menu.style.maxHeight = '0px';
        }
    });

    // Mobile menu dark mode toggle
    document.getElementById('darkModeToggleMobile')?.addEventListener('change', function() {
        document.getElementById('darkModeToggle').checked = this.checked;
        document.getElementById('darkModeToggle').dispatchEvent(new Event('change'));
    });

    // Dashboard button visibility and role-based UI setup - Universal for all pages
    (function setupRoleBasedUI() {
        const dashboardButton = document.getElementById('dashboard-button');
        const dashboardText = document.getElementById('dashboard-text');
        const upgradeButton = document.getElementById('upgrade-button');
        const mobileUpgradeButton = document.getElementById('mobile-upgrade-button');
        const cartButton = document.getElementById('cart-button');
        const tierBadge = document.getElementById('user-tier-badge');

        try {
            const user = JSON.parse(localStorage.getItem('user') || '{}');
            const userRole = (user.role || '').toLowerCase(); // Case-insensitive

            console.log('User role:', userRole); // Debug log

            // Handle dashboard button and role-specific UI
            if (userRole === 'admin' || userRole === 'teacher') {
                // Show dashboard button
                if (dashboardButton) {
                    dashboardButton.classList.remove('hidden');
                    dashboardButton.style.display = 'flex';

                    // Set appropriate text
                    if (userRole === 'admin') {
                        dashboardText.textContent = 'Admin Dashboard';
                    } else if (userRole === 'teacher') {
                        dashboardText.textContent = 'Teacher Dashboard';
                    }

                    // Add click event listener
                    dashboardButton.addEventListener('click', function() {
                        if (userRole === 'admin') {
                            window.location.href = '/admin';
                        } else if (userRole === 'teacher') {
                            window.location.href = '/teacher';
                        }
                    });
                }

                // Hide upgrade button for teachers and admins
                if (upgradeButton) {
                    upgradeButton.style.display = 'none';
                }
                if (mobileUpgradeButton) {
                    mobileUpgradeButton.style.display = 'none';
                }

                // Hide cart button for teachers and admins
                if (cartButton) {
                    cartButton.style.display = 'none';
                }

                // Set role-appropriate badge
                if (tierBadge) {
                    if (userRole === 'admin') {
                        tierBadge.innerHTML = `
                            <span class="px-3 py-1 text-xs font-bold bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-full flex items-center gap-1">
                                <i class="fas fa-shield-alt"></i> ADMIN
                            </span>
                        `;
                    } else if (userRole === 'teacher') {
                        tierBadge.innerHTML = `
                            <span class="px-3 py-1 text-xs font-bold bg-gradient-to-r from-green-500 to-teal-500 text-white rounded-full flex items-center gap-1">
                                <i class="fas fa-chalkboard-teacher"></i> TEACHER
                            </span>
                        `;
                    }
                }
            } else {
                // Student role - hide dashboard button
                if (dashboardButton) {
                    dashboardButton.classList.add('hidden');
                    dashboardButton.style.display = 'none';
                }

                // Show upgrade and cart buttons for students
                if (upgradeButton) {
                    upgradeButton.style.display = 'flex';
                }
                if (mobileUpgradeButton) {
                    mobileUpgradeButton.style.display = 'block';
                }
                if (cartButton) {
                    cartButton.style.display = 'block';
                }

                // Set student tier badge (handled by existing page logic)
                console.log('Student UI setup complete');
            }
        } catch (error) {
            console.error('Error setting up role-based UI:', error);
            if (dashboardButton) {
                dashboardButton.classList.add('hidden');
                dashboardButton.style.display = 'none';
            }
        }
    })();
</script>
