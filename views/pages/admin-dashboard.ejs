    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;600&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        body { font-family: 'Inter', sans-serif; background-color: #f3f4f6; }
        .certificate { font-family: 'Playfair Display', serif; background-image: radial-gradient(#d4e5ff 1.5px, transparent 1.5px); background-size: 16px 16px; position: relative; overflow: hidden; border-radius: 16px; }
        .certificate::before { content: ''; position: absolute; top: 0; left: 0; right: 0; bottom: 0; border-radius: 16px; padding: 8px; background: linear-gradient(135deg, #3b82f6 0%, #10b981 50%, #ec4899 100%); -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude; pointer-events: none; }
        .certificate-title { font-family: 'Playfair Display', serif; font-style: italic; background: linear-gradient(135deg, #3b82f6, #2563eb); -webkit-background-clip: text; background-clip: text; color: transparent; }
        .certificate-name { font-family: 'Playfair Display', serif; font-weight: 700; font-size: 2.5rem; color: #1e3a8a; text-align: center; margin: 1.5rem 0; padding: 0 1rem; }
        .seal { position: absolute; bottom: 30px; right: 40px; width: 100px; height: 100px; }
        .star-icon { width: 80px; height: 80px; background: linear-gradient(135deg, #dbeafe, #bfdbfe); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; }
        .star-icon svg { width: 48px; height: 48px; color: #3b82f6; fill: #3b82f6; }
        .sidebar { transition: all 0.3s ease; }
        .sidebar-item:hover { background-color: #f3f4f6; }
        .dark .sidebar-item:hover { background-color: rgba(55, 65, 81, 0.5); }
        .sidebar-item.active { background-color: #dbeafe; color: #1d4ed8; }
        .dark .sidebar-item.active { background-color: rgba(59, 130, 246, 0.2); color: #60a5fa; }
        .sidebar-item.active i { color: #3b82f6; }
        .sidebar-item.active span { font-weight: 500; }
        .card { transition: all 0.3s ease; }
        .card:hover { transform: translateY(-5px); box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); }
        .chart-container { height: 300px; position: relative; }

        /* === MERGED FROM FILE 1: CSS FOR MODAL === */
        .modal { transition: opacity 0.3s ease; }
        .modal.hidden { pointer-events: none; opacity: 0; }
        .modal-content { transition: transform 0.3s ease; }
        .modal.hidden .modal-content { transform: translateY(-20px); }

        /* Role filter button active state */
        .role-filter-btn.active {
            background-color: #2563eb;
            color: white;
            border-color: #2563eb;
        }
    </style>
    <script src="/js/darkmode.js"></script>
    <script>
        tailwind.config = {
            darkMode: 'class'
        }
    </script>
    <link rel="stylesheet" href="/css/darkmode-improved.css">
</head>
