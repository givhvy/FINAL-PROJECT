                            <div class="p-4"> <div class="chart-container" id="categoriesChart"> <canvas id="categoriesCanvas"></canvas> </div> </div>
                        </div>
                    </div>
                </section>
                

                <section id="subscriptions" class="page-content hidden">
                    <div id="subscriptions-container">
                        </div>
                </section>

                <section id="certificates" class="page-content hidden">
