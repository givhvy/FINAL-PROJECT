<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificate - <%= title %></title>
    <link rel="icon" type="image/svg+xml" href="/images/e-learning.svg">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f0f4f8;
        }
        .certificate {
            font-family: 'Playfair Display', serif;
            background-color: #fff;
            background-image: radial-gradient(#d4e5ff 1.5px, transparent 1.5px);
            background-size: 16px 16px;
            position: relative;
            overflow: hidden;
            border-radius: 16px;
        }
        .certificate::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 16px;
            padding: 8px;
            background: linear-gradient(135deg, #3b82f6 0%, #10b981 50%, #fbbf24 100%);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }
        .certificate-title {
            font-family: 'Playfair Display', serif;
            font-style: italic;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
        .certificate-name {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 2.5rem;
            color: #1e3a8a;
            text-align: center;
            margin: 1.5rem 0;
            padding: 0 1rem;
        }
        .seal {
            position: absolute;
            bottom: 30px;
            right: 40px;
            width: 100px;
            height: 100px;
        }
        .star-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .star-icon svg {
            width: 48px;
            height: 48px;
            color: #3b82f6;
            fill: #3b82f6;
        }
        @media print {
            body {
                background-color: white;
            }
            .no-print {
                display: none !important;
            }
            .certificate::before {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
        @media (max-width: 768px) {
            .certificate-name {
                font-size: 1.8rem;
            }
            .seal {
                width: 70px;
                height: 70px;
                bottom: 20px;
                right: 20px;
            }
            .star-icon {
                width: 60px;
                height: 60px;
            }
            .star-icon svg {
                width: 36px;
                height: 36px;
            }
        }
    </style>
</head>
<body>
    <div class="min-h-screen flex flex-col items-center justify-center p-4">
        <!-- Action Buttons -->
        <div class="w-full max-w-4xl mb-4 flex justify-between items-center no-print">
            <button onclick="window.history.back()" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600 transition">
                <i class="fas fa-arrow-left mr-2"></i>Back
            </button>
            <div class="space-x-2">
                <button onclick="printCertificate()" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                    <i class="fas fa-print mr-2"></i>Print
                </button>
                <button onclick="downloadCertificate()" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition">
                    <i class="fas fa-download mr-2"></i>Download
                </button>
            </div>
        </div>

        <!-- Certificate -->
        <div id="certificate-container" class="w-full max-w-4xl certificate rounded-xl shadow-2xl p-12 relative">
            <!-- Loading State -->
            <div id="loading" class="text-center py-20">
                <i class="fas fa-spinner fa-spin text-4xl text-blue-600 mb-4"></i>
                <p class="text-gray-600">Loading certificate...</p>
            </div>

            <!-- Certificate Content (hidden initially) -->
            <div id="certificate-content" class="hidden">
                <!-- Header Icon -->
                <div class="text-center mb-6">
                    <div class="star-icon mx-auto">
                        <svg viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                    </div>
                </div>

                <!-- Certificate Header -->
                <h2 class="text-center text-gray-500 tracking-[0.3em] text-xs font-semibold uppercase mb-3">CERTIFICATE OF COMPLETION</h2>
                <h1 class="certificate-title text-5xl font-bold text-center mb-8">Achievement Award</h1>

                <!-- Main Content -->
                <p class="text-center text-gray-600 text-base mb-2">This certifies that</p>
                <h2 id="cert-name" class="certificate-name">Loading...</h2>
                <p class="text-center text-gray-600 text-base mb-6">has successfully completed the course</p>
                
                <h3 id="cert-course" class="text-2xl font-bold text-blue-600 text-center mb-4">Loading...</h3>

                <!-- Date -->
                <p id="cert-date" class="text-center text-gray-500 text-base mb-10">Loading...</p>

                <!-- Signatures -->
                <div class="grid grid-cols-2 gap-8 mb-6">
                    <div class="text-center">
                        <div class="border-t-2 border-gray-300 pt-3">
                            <p class="font-semibold text-gray-800">Jane Smith</p>
                            <p class="text-sm text-gray-500">Course Instructor</p>
                        </div>
                    </div>
                    <div class="text-center">
                        <div class="border-t-2 border-gray-300 pt-3">
                            <p class="font-semibold text-gray-800">Robert Johnson</p>
                            <p class="text-sm text-gray-500">Program Director</p>
                        </div>
                    </div>
                </div>

                <!-- Verification Seal -->
                <div class="seal">
                    <svg viewBox="0 0 100 100" class="w-full h-full">
                        <circle cx="50" cy="50" r="46" fill="none" stroke="#3b82f6" stroke-width="1.5"/>
                        <circle cx="50" cy="50" r="40" fill="none" stroke="#3b82f6" stroke-width="1" stroke-dasharray="3,3"/>
                        <path d="M50,25 L54,38 L68,38 L57,47 L61,60 L50,52 L39,60 L43,47 L32,38 L46,38 Z" fill="#3b82f6"/>
                        <text x="50" y="73" text-anchor="middle" font-size="7" fill="#3b82f6" font-weight="bold" font-family="Montserrat, sans-serif">VERIFIED</text>
                        <text x="50" y="81" text-anchor="middle" font-size="5" fill="#3b82f6" font-family="Montserrat, sans-serif">AUTHENTIC</text>
                    </svg>
                </div>

                <!-- Certificate ID -->
                <div class="text-center mt-8">
                    <p class="text-xs text-gray-500">Certificate ID: <span id="cert-id" class="font-mono">Loading...</span></p>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/shared/api-utils.js"></script>
    <script>
        // Get certificate ID from URL
        const urlParams = new URLSearchParams(window.location.search);
        const certificateId = urlParams.get('id');

        if (!certificateId) {
            document.getElementById('loading').innerHTML = '<p class="text-red-600">Invalid certificate link</p>';
        } else {
            loadCertificate(certificateId);
        }

        async function loadCertificate(id) {
            try {
                const response = await fetchWithAuth(`/api/certificates/${id}`);
                
                if (!response.ok) {
                    throw new Error('Certificate not found');
                }

                const certificate = await response.json();

                // Populate certificate data
                document.getElementById('cert-name').textContent = certificate.userName || 'Student';
                document.getElementById('cert-course').textContent = certificate.courseName || 'Course';
                
                // Format date
                let dateStr = 'N/A';
                const dateField = certificate.issuedAt || certificate.completedAt;
                if (dateField) {
                    if (dateField._seconds) {
                        const date = new Date(dateField._seconds * 1000);
                        dateStr = date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                    } else if (dateField.toDate && typeof dateField.toDate === 'function') {
                        dateStr = dateField.toDate().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                    } else {
                        const date = new Date(dateField);
                        if (!isNaN(date.getTime())) {
                            dateStr = date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                        }
                    }
                }
                document.getElementById('cert-date').textContent = dateStr;
                document.getElementById('cert-id').textContent = certificate.certificateId || id;

                // Show certificate, hide loading
                document.getElementById('loading').classList.add('hidden');
                document.getElementById('certificate-content').classList.remove('hidden');

            } catch (error) {
                console.error('Error loading certificate:', error);
                document.getElementById('loading').innerHTML = '<p class="text-red-600">Failed to load certificate. Please try again.</p>';
            }
        }

        function printCertificate() {
            window.print();
        }

        function downloadCertificate() {
            // Use browser print dialog with "Save as PDF" option
            alert('Please use your browser\'s Print function and select "Save as PDF" to download the certificate.');
            window.print();
        }
    </script>
</body>
</html>
