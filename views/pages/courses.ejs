    // Auto-enrollment function to ensure user is enrolled when accessing a course
    async function autoEnrollUser(courseId) {
        try {
            // Check if user is already enrolled
            const checkResponse = await fetch(`/api/users/${user.id}/progress`, {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            if (checkResponse.ok) {
                const progressData = await checkResponse.json();
                const isEnrolled = progressData.some(progress => progress.courseId === courseId);
                if (isEnrolled) {
                    return; // Already enrolled
                }
            }

            // Auto-enroll by creating a completed order of Enrollment
            const enrollResponse = await fetch('/api/orders', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify({
                    user_id: user.id,
                    course_id: courseId,
                    amount: 0, // Free auto-enrollment
                    status: 'completed',
                    order_date: new Date().toISOString()
                })
            });

            if (!enrollResponse.ok) {
                console.warn('Auto-enrollment failed, but continuing with course access');
            } else {
                console.log('User auto-enrolled in course:', courseId);
            }
        } catch (error) {
            console.warn('Auto-enrollment error:', error);
            // Don't block course access if enrollment fails
        }
    }

