    // Initialize Swiper for mobile tab navigation
    let tabSwiper = null;
    
    function initMobileSwiper() {
        if (window.innerWidth < 768) { // Mobile only
            if (!tabSwiper) {
                tabSwiper = new Swiper('.swiper-mobile-tabs', {
                    slidesPerView: 1,
                    spaceBetween: 0,
                    pagination: {
                        el: '.swiper-pagination',
                        clickable: true,
                    },
                    on: {
                        slideChange: function () {
                            const activeIndex = this.activeIndex;
                            const tabs = ['dashboard', 'quizzes', 'grades', 'certificates'];
                            
                            // Update tab content
                            setActiveTab(tabs[activeIndex]);
                            
                            // Update mobile tab indicators
                            document.querySelectorAll('.mobile-tab-indicator span').forEach((indicator, index) => {
                                if (index === activeIndex) {
                                    indicator.classList.add('active');
                                } else {
                                    indicator.classList.remove('active');
                                }
                            });
                        }
                    }
                });
            }
        } else {
            // Destroy swiper on desktop
            if (tabSwiper) {
                tabSwiper.destroy(true, true);
                tabSwiper = null;
            }
        }
    }

    // Initialize on load
    initMobileSwiper();

    // Re-initialize on resize
    let resizeTimer;
    window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(() => {
            initMobileSwiper();
        }, 250);
    });

    // Desktop tab button clicks
    document.querySelectorAll('.tab-button').forEach(button => {
        button.addEventListener('click', function() {
            const target = this.dataset.target;
            const tabName = target.replace('content-', '');
            setActiveTab(tabName);
            
            // Update active button state
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');
        });
    });
