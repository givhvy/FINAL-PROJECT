            const response = await fetch(`/api/certificates/${currentCertificate.id}/download`);
            const blob = await response.blob();
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `certificate-${currentCertificate.certificate_number}.pdf`;
            document.body.appendChild(a);
            a.click();
