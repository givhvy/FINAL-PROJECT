<script>
document.addEventListener('DOMContentLoaded', async () => {
    // --- AUTH GUARD & GLOBAL VARS ---
    const token = localStorage.getItem('token');
    const user = JSON.parse(localStorage.getItem('user'));
    
    if (!token || !user) {
        window.location.href = '/login';
        return;
    }

    // --- UTILITIES ---
    function getUserInitials(name) {
        if (!name) return '??';
        const parts = name.split(' ');
        let initials = parts[0].charAt(0).toUpperCase();
        if (parts.length > 1) {
            initials += parts[parts.length - 1].charAt(0).toUpperCase();
        }
        return initials;
    }

    // NEW: Function to handle switching main tabs (Dashboard, Quizzes, Grades)
    function setActiveTab(targetId) {
        // Switch main tabs
        document.querySelectorAll('.tab-button').forEach(btn => {
            btn.classList.remove('active');
            document.getElementById(btn.dataset.target).classList.add('hidden');
        });
        
        // Activate the selected tab
        document.getElementById(`tab-${targetId}`).classList.add('active');
        document.getElementById(`content-${targetId}`).classList.remove('hidden');

        // Load data based on the active tab
        if (targetId === 'dashboard') {
             fetchAndRenderLearningProgress(); // THÊM LẠI HÀM NÀY CHO TAB DASHBOARD
             fetchAndRenderEnrolledCourses();
        } else if (targetId === 'quizzes') {
             fetchAndRenderAvailableQuizzes();
        } else if (targetId === 'grades') {
             fetchAndRenderMyGrades();
        } else if (targetId === 'certificates') {
             fetchAndRenderCertificates();
        }
    }


    // --- FETCH AND RENDER FUNCTIONS ---
    
    // RENDER: My Enrolled Courses (Dashboard Tab)
    async function fetchAndRenderEnrolledCourses() {
        const enrolledListDiv = document.getElementById('enrolled-courses-list');
        enrolledListDiv.innerHTML = '<p class="text-gray-500">Loading your enrolled courses...</p>';
        try {
            const userId = user.id;

            // Fetch ALL user's orders to get enrolled courses (any status)
            const ordersResponse = await fetch(`/api/orders?userId=${userId}`, {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            if (!ordersResponse.ok) throw new Error('Failed to fetch orders.');
            const orders = await ordersResponse.json();

            if (!Array.isArray(orders) || orders.length === 0) {
                enrolledListDiv.innerHTML = '<p class="text-gray-500">You are not enrolled in any courses yet. <a href="/courses" class="text-blue-600 hover:underline">Browse courses</a></p>';
                return;
            }

            // Get unique course IDs from orders
            const enrolledCourseIds = [...new Set(orders.map(order => order.courseId || order.course_id))];

            // Fetch all courses
            const coursesResponse = await fetch('/api/courses', { headers: { 'Authorization': `Bearer ${token}` } });
            if (!coursesResponse.ok) throw new Error('Failed to fetch courses.');
            const allCourses = await coursesResponse.json();

            // Filter only enrolled courses
            const enrolledCourses = allCourses.filter(course => enrolledCourseIds.includes(course.id));

            if (enrolledCourses.length === 0) {
                enrolledListDiv.innerHTML = '<p class="text-gray-500">You are not enrolled in any courses yet.</p>';
                return;
            }

            enrolledListDiv.innerHTML = '';
            enrolledCourses.slice(0, 3).forEach(course => { 
                const courseItem = document.createElement('div');
                courseItem.className = 'quiz-card border rounded-lg p-4 hover:shadow-md transition-shadow';
                courseItem.innerHTML = `
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="h-12 w-12 rounded-md bg-blue-100 flex items-center justify-center mr-4">
                                <i class="fas fa-book text-blue-500"></i>
                            </div>
                            <div>
                                <h3 class="font-medium">${course.title}</h3>
                                <p class="text-sm text-gray-500">Instructor: ${course.teacher ? course.teacher.name : 'N/A'}</p>
                            </div>
                        </div>
                        <a href="/courses#lesson/${course.id}" class="px-3 py-1 bg-blue-50 text-blue-600 rounded-md hover:bg-blue-100 transition-colors">
                            Continue
                        </a>
                    </div>
                `;
                enrolledListDiv.appendChild(courseItem);
            });

        } catch (error) {
            console.error('Fetch Enrolled Courses Error:', error);
            enrolledListDiv.innerHTML = `<p class="text-red-500">Error loading your courses.</p>`;
        }
    }

    // RENDER: Available Quizzes (Quizzes Tab)
    async function fetchAndRenderAvailableQuizzes() {
        const quizListDiv = document.getElementById('available-quizzes-list');
        quizListDiv.innerHTML = '<p class="text-gray-500 text-center py-4">Loading available quizzes...</p>';

        try {
            const quizzesResponse = await fetch('/api/quizzes', { headers: { 'Authorization': `Bearer ${token}` } });
            if (!quizzesResponse.ok) throw new Error('Failed to fetch quizzes.');
            let quizzes = await quizzesResponse.json();

            // Ensure quizzes is an array
            if (!Array.isArray(quizzes)) {
                console.error('Quizzes is not an array:', quizzes);
                quizzes = [];
            }

            const gradesResponse = await fetch(`/api/grades?userId=${user.id}`, { headers: { 'Authorization': `Bearer ${token}` } });
            const myGrades = gradesResponse.ok ? await gradesResponse.json() : [];
            const completedQuizIds = new Set(myGrades.map(g => g.quizId || g.quiz_id));


            const availableQuizzes = quizzes.filter(q => !completedQuizIds.has(q.id));

            if (availableQuizzes.length === 0) {
                quizListDiv.innerHTML = '<p class="text-gray-500 text-center py-4">No new quizzes currently available.</p>';
                return;
            }

            quizListDiv.innerHTML = availableQuizzes.map(quiz => `
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-4 border border-gray-100 quiz-card flex justify-between items-center">
                    <div class="flex-grow pr-4">
                        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">${quiz.title}</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">${quiz.description || 'Test your knowledge with this quiz.'}</p>
                        <p class="text-xs text-gray-500 mt-2">
                             <i class="fas fa-question-circle mr-1 text-blue-400"></i> ${quiz.questions ? quiz.questions.length : 'N/A'} Questions
                             ${quiz.lesson ? ` | <span class="text-blue-500">${quiz.lesson.course ? quiz.lesson.course.title : 'N/A Course'}</span>` : ''}
                        </p>
                    </div>
                    <a href="/courses?quizId=${quiz.id}&courseId=${quiz.course_id}" class="flex-shrink-0 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors text-sm font-medium">
                        Start Quiz
                    </a>
                </div>
            `).join('');

        } catch (error) {
            console.error('Fetch Quizzes Error:', error);
            quizListDiv.innerHTML = `<p class="text-red-500 text-center py-4">Error loading quizzes: ${error.message}</p>`;
        }
    }

    // RENDER: My Grades (Grades Tab)
    async function fetchAndRenderMyGrades() {
        const gradesListDiv = document.getElementById('my-grades-list');
        gradesListDiv.innerHTML = '<p class="text-gray-500 text-center py-4">Loading your grades...</p>';

        try {
            const gradesResponse = await fetch(`/api/grades?userId=${user.id}`, { headers: { 'Authorization': `Bearer ${token}` } });
            if (!gradesResponse.ok) throw new Error('Failed to fetch grades.');
            const myGrades = await gradesResponse.json(); 

            // Filter out grades for deleted quizzes
            const validGrades = myGrades.filter(grade => grade.quiz !== null && grade.quiz !== undefined);

            if (validGrades.length === 0) {
                gradesListDiv.innerHTML = '<p class="text-gray-500 text-center py-4">You have not completed any quizzes yet.</p>';
                return;
            }

            gradesListDiv.innerHTML = validGrades.map(grade => {
                const score = grade.score || 0;
                const isPassed = score >= 70;
                const scoreColor = isPassed ? 'text-green-700 bg-green-100' : 'text-red-700 bg-red-100';

                // Format date properly
                let dateStr = 'N/A';
                try {
                    if (grade.createdAt) {
                        // Handle both Firestore Timestamp and ISO string
                        const date = grade.createdAt.toDate ? grade.createdAt.toDate() : new Date(grade.createdAt);
                        dateStr = date.toLocaleDateString();
                    }
                } catch (e) {
                    console.error('Error formatting date:', e);
                }

                return `
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-4 border border-gray-100 quiz-card flex justify-between items-center">
                        <div class="flex-grow pr-4">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">${grade.quiz ? grade.quiz.title : 'Quiz Deleted'}</h3>
                            <p class="text-sm text-gray-600 dark:text-gray-400">Quiz ID: ${grade.quiz_id || 'N/A'}</p>
                            <p class="text-xs text-gray-500 mt-2">Completed on: ${dateStr}</p>
                        </div>
                        <div class="grade-score text-right">
                            <span class="font-bold text-xl px-3 py-1 rounded-full ${scoreColor}">${score}%</span>
                            <p class="text-xs text-gray-500 mt-1">${isPassed ? 'Passed' : 'Failed'}</p>
                        </div>
                    </div>
                `;
            }).join('');

        } catch (error) {
            console.error('Fetch Grades Error:', error);
            gradesListDiv.innerHTML = `<p class="text-red-500 text-center py-4">Error loading grades: ${error.message}</p>`;
        }
    }


// --- NEW: RENDER PROGRESS BAR LOGIC ---
async function fetchAndRenderLearningProgress() {
    const progressContainer = document.getElementById('progress-container');
    const userId = user.id; // Lấy ID người dùng hiện tại

    console.log('=== fetchAndRenderLearningProgress START ===');
    console.log('Current userId:', userId);
    console.log('Token exists:', !!token);

    progressContainer.innerHTML = '<p class="text-gray-500 text-center">Loading learning progress...</p>';

    try {
        const apiUrl = `/api/users/${userId}/progress`;
        console.log('Fetching from:', apiUrl);

        const response = await fetch(apiUrl, {
            headers: { 'Authorization': `Bearer ${token}` }
        });

        console.log('Response status:', response.status);
        console.log('Response ok:', response.ok);

        if (!response.ok) {
            const errorText = await response.text();
            console.error('Progress API error:', errorText);
            throw new Error('Failed to fetch progress details.');
        }

        let progressData = await response.json();
        console.log('Raw progressData received:', progressData);
        console.log('progressData type:', typeof progressData);
        console.log('progressData is array:', Array.isArray(progressData));

        // Ensure progressData is an array
        if (!Array.isArray(progressData)) {
