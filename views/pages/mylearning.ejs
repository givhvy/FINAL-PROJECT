    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <style>
        body { font-family: 'Poppins', sans-serif; background-color: #f8fafc; }
        .progress-bar { height: 8px; border-radius: 4px; background-color: #e5e7eb; overflow: hidden; }
        .progress-fill { height: 100%; border-radius: 4px; background-color: #2563eb; transition: width 0.5s ease; }
        /* Styles cho thanh điều hướng mới */
        .nav-link {
            padding: 0.25rem 0.5rem;
            color: #4b5563; 
            transition: color 0.2s, border-color 0.2s;
            border-bottom: 2px solid transparent;
            font-weight: 500;
        }
        .nav-link:hover {
            color: #1f2937; 
            border-bottom-color: #3b82f6;
        }
        .nav-link.active {
            color: #3b82f6;
            border-bottom-color: #3b82f6;
            font-weight: 600;
        }
        /* Custom Logo Style */
        .header-logo { color: #2563eb; font-weight: 800; }
        /* Tab Styles (Main Tabs) */
        .tab-button { transition: color 0.2s; border-bottom: 2px solid transparent; }
        .tab-button:hover { color: #2563eb; }
        .tab-button.active { border-bottom: 3px solid #3b82f6; color: #3b82f6; font-weight: 600; }
        
        /* New Quiz Card Styles */
        .quiz-card {
            transition: box-shadow 0.2s;
        }
        .quiz-card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }
        .grade-score {
            min-width: 6rem;
            text-align: center;
        }

        /* Certificate Styles */
        .certificate-card {
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }
        .certificate-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        }

        /* Certificate Modal */
        .certificate-modal {
            font-family: 'Playfair Display', serif;
            background-image: radial-gradient(#e6f0ff 1px, transparent 1px);
            background-size: 20px 20px;
        }
        .certificate-modal::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border: 12px solid transparent;
            border-image: linear-gradient(45deg, #3b82f6, #3b82f6, #ec4899) 1;
            pointer-events: none;
        }
        .certificate-name {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            font-size: 2rem;
            color: #1e3a8a;
        }
        .certificate-title {
            background: linear-gradient(45deg, #3b82f6, #3b82f6);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        /* Swiper Mobile Tab Navigation */
        .swiper-mobile-tabs {
            padding-bottom: 1rem;
        }
        .swiper-mobile-tabs .swiper-pagination {
            bottom: 0;
        }
        .swiper-mobile-tabs .swiper-pagination-bullet {
            background: #3b82f6;
            opacity: 0.5;
            width: 8px;
            height: 8px;
        }
        .swiper-mobile-tabs .swiper-pagination-bullet-active {
            opacity: 1;
            width: 24px;
            border-radius: 4px;
        }
        
        /* Mobile tab indicator */
        .mobile-tab-indicator {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }
        .mobile-tab-indicator span {
            display: block;
            width: 2rem;
            height: 3px;
            background: #e5e7eb;
            border-radius: 2px;
            transition: all 0.3s ease;
        }
        .mobile-tab-indicator span.active {
            background: #3b82f6;
            width: 3rem;
        }

        @media (max-width: 767px) {
            .tab-button {
                display: none;
            }
        }
    </style>
