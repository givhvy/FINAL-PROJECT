    */
    document.getElementById('user-avatar').textContent = getUserInitials(user.name);  /* Hiển thị avatar */
    
    document.getElementById('user-menu-button').addEventListener('click', () => {
        window.location.href = '/profile';  /* Đi tới trang profile */
    });
    
    document.getElementById('logout-button').addEventListener('click', () => {
        localStorage.clear();  /* Xóa localStorage */
        window.location.href = '/login';  /* Quay lại login */
    });

    /* 
    🔗 Tab Switching Listeners
    Gắn event listener cho mỗi tab button
    */
    document.getElementById('tab-dashboard').addEventListener('click', () => setActiveTab('dashboard'));
    document.getElementById('tab-quizzes').addEventListener('click', () => setActiveTab('quizzes'));
    document.getElementById('tab-grades').addEventListener('click', () => setActiveTab('grades'));
    document.getElementById('tab-certificates').addEventListener('click', () => setActiveTab('certificates'));


    /* 
    📊 2. Tải dữ liệu ban đầu
    Khi trang mới tải, gọi các hàm để lấy dữ liệu
    */
    fetchAndRenderLearningProgress();    /* Tải tiến độ */
    fetchAndRenderEnrolledCourses();     /* Tải khóa học */

    /* 
    🔍 3. Kiểm tra URL hash
    Nếu URL có #certificates, chuyển sang tab certificates
    Ví dụ: /mylearning#certificates
    */
    const hash = window.location.hash.replace('#', '');  /* Lấy hash từ URL */
    if (hash && ['dashboard', 'quizzes', 'grades', 'certificates'].includes(hash)) {
        setActiveTab(hash);  /* Chuyển sang tab tương ứng */
    } else {
        setActiveTab('dashboard');  /* Mặc định hiển thị Dashboard */
    }

    /* 
    📱 4. Khởi tạo Swiper cho mobile tabs
    Swiper cho phép swipe ngang giữa các tab trên mobile
    */
    let tabSwiper = null;  /* Lưu instance Swiper */
    
    function initMobileSwiper() {
        if (window.innerWidth < 768) {  /* Nếu độ rộng màn hình < 768px (mobile) */
            if (!tabSwiper) {  /* Nếu Swiper chưa được khởi tạo */
                tabSwiper = new Swiper('.swiper-mobile-tabs', {
                    slidesPerView: 1,  /* Hiển thị 1 slide mỗi lần */
                    spaceBetween: 0,   /* Khoảng cách giữa slides = 0 */
                    pagination: {
                        el: '.swiper-pagination',  /* Hiển thị dots */
                        clickable: true,  /* Có thể nhấn dots để chuyển */
                    },
                    on: {
                        slideChange: function () {  /* Khi chuyển slide */
                            const activeIndex = this.activeIndex;  /* Lấy index slide hiện tại */
                            const tabs = ['dashboard', 'quizzes', 'grades', 'certificates'];
                            
                            /* Cập nhật tab content */
                            setActiveTab(tabs[activeIndex]);
                            
                            /* Cập nhật mobile tab indicators (dấu chấm) */
                            document.querySelectorAll('.mobile-tab-indicator span').forEach((indicator, index) => {
                                if (index === activeIndex) {
                                    indicator.classList.add('active');  /* Tô đậm dấu chấm hiện tại */
                                } else {
                                    indicator.classList.remove('active');  /* Làm nhạt các dấu chấm khác */
                                }
                            });
                        }
                    }
                });
            }
        } else {  /* Nếu desktop */
            /* Hủy Swiper trên desktop */
            if (tabSwiper) {
                tabSwiper.destroy(true, true);  /* Destroy Swiper */
                tabSwiper = null;
            }
        }
    }

    /* Khởi tạo Swiper khi trang tải */
    initMobileSwiper();

    /* 
    🔄 Khởi tạo lại Swiper khi resize window
    Nếu người dùng phóng to/thu nhỏ trình duyệt, cần khởi tạo lại Swiper
    */
    let resizeTimer;
    window.addEventListener('resize', () => {
        clearTimeout(resizeTimer);  /* Xóa timer cũ */
        resizeTimer = setTimeout(() => {  /* Đợi 250ms sau khi resize xong */
            initMobileSwiper();  /* Khởi tạo lại Swiper */
        }, 250);
    });

    /* 
    🖱️ Desktop Tab Button Clicks
    Gắn event listener cho tab buttons trên desktop
    */
    document.querySelectorAll('.tab-button').forEach(button => {
        button.addEventListener('click', function() {
            const target = this.dataset.target;  /* Lấy data-target */
            const tabName = target.replace('content-', '');  /* Lấy tên tab */
            setActiveTab(tabName);  /* Chuyển sang tab */
            
            /* Cập nhật active button state */
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');  /* Tô đậm button được nhấn */
        });
    });
});
</script>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>


