/*
╔══════════════════════════════════════════════════════════════════════════════╗
║  🎬 JAVASCRIPT - My Learning Dashboard (Student Progress Tracking)          ║
╚══════════════════════════════════════════════════════════════════════════════╝
*/

document.addEventListener('DOMContentLoaded', async () => {
    /* 
    🔐 BƯỚC 1: KIỂM TRA ĐĂNG NHẬP (AUTH GUARD)
    Nếu người dùng chưa đăng nhập, đưa về trang login
    (Giống như kiểm tra vé trước khi vào quán ăn) 🎫
    */
    const token = localStorage.getItem('token');                    /* Lấy JWT token từ localStorage */
    const user = JSON.parse(localStorage.getItem('user'));          /* Lấy thông tin user từ localStorage */
    
    if (!token || !user) {                                          /* Nếu không có token hoặc user */
        window.location.href = '/login';                            /* Chuyển hướng về login */
        return;                                                      /* Dừng code ở đây */
    }

    /* 
    💡 BƯỚC 2: HÀM TIỆN ÍCH
    Tạo các hàm nhỏ để xử lý dữ liệu
    */

    /* 📝 FUNCTION: Lấy chữ cái đầu của tên */
    function getUserInitials(name) {
        /* 
        INPUT: tên của user (ví dụ: "Nguyễn Văn A")
        OUTPUT: "NA" (chữ cái đầu + chữ cái cuối)
        */
        if (!name) return '??';                                     /* Nếu không có tên */
        const parts = name.split(' ');                              /* Tách tên thành mảng từ */
        let initials = parts[0].charAt(0).toUpperCase();            /* Lấy chữ cái đầu của từ đầu */
        if (parts.length > 1) {
            initials += parts[parts.length - 1].charAt(0).toUpperCase();  /* Lấy chữ cái đầu của từ cuối */
        }
        return initials;                                            /* Trả về (ví dụ: "NA") */
    }

    /* 
    📋 FUNCTION: Chuyển tab hiển thị (Dashboard, Quiz, Grades, Certificates)
    Giống như nhấn nút để xem mục khác nhau
    */
    function setActiveTab(targetId) {
        /* 
        INPUT: targetId = tên tab cần hiển thị ("dashboard", "quizzes", "grades", "certificates")
        OUTPUT: Hiển thị tab được chọn, tải dữ liệu tương ứng
        */
        
        /* 🔄 Bước 1: Ẩn tất cả tab */
        document.querySelectorAll('.tab-button').forEach(btn => {
            btn.classList.remove('active');                         /* Xóa active từ tất cả button */
            document.getElementById(btn.dataset.target).classList.add('hidden');  /* Ẩn tất cả content */
        });
        
        /* ✅ Bước 2: Hiển thị tab được chọn */
        document.getElementById(`tab-${targetId}`).classList.add('active');      /* Làm button active */
        document.getElementById(`content-${targetId}`).classList.remove('hidden');  /* Hiện content */

        /* 
        🎯 Bước 3: Tải dữ liệu tương ứng với tab
        Mỗi tab gọi một hàm fetch khác nhau để lấy dữ liệu từ backend
        */
        if (targetId === 'dashboard') {
             fetchAndRenderLearningProgress();                      /* Tải tiến độ học */
             fetchAndRenderEnrolledCourses();                       /* Tải khóa học đang học */
        } else if (targetId === 'quizzes') {
             fetchAndRenderAvailableQuizzes();                      /* Tải danh sách quiz */
        } else if (targetId === 'grades') {
             fetchAndRenderMyGrades();                              /* Tải bảng điểm */
        } else if (targetId === 'certificates') {
             fetchAndRenderCertificates();                          /* Tải chứng chỉ */
        }
    }

    /* 
    🌐 BƯỚC 3: CÁC HÀM FETCH DỮ LIỆU TỪ BACKEND
    Gọi API để lấy dữ liệu từ server
    */

    /* 
    📚 FUNCTION: Tải và hiển thị khóa học đang học (Dashboard Tab)
    - Fetch tất cả order của user
    - Lấy course từ order
    - Hiển thị 3 khóa học đầu tiên
    */
    async function fetchAndRenderEnrolledCourses() {
        const enrolledListDiv = document.getElementById('enrolled-courses-list');
        enrolledListDiv.innerHTML = '<p class="text-gray-500">Loading your enrolled courses...</p>';
        
        try {
            const userId = user.id;  /* Lấy user ID */

            /* 
            🔗 API CALL 1: Lấy tất cả order của user
            Endpoint: /api/orders?userId={userId}
            Dữ liệu: Danh sách order (mua khóa học)
            */
            const ordersResponse = await fetch(`/api/orders?userId=${userId}`, {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            if (!ordersResponse.ok) throw new Error('Failed to fetch orders.');
            const orders = await ordersResponse.json();  /* Lấy kết quả JSON */

            if (!Array.isArray(orders) || orders.length === 0) {
                enrolledListDiv.innerHTML = '<p class="text-gray-500">You are not enrolled in any courses yet. <a href="/courses" class="text-blue-600 hover:underline">Browse courses</a></p>';
                return;
            }

            /* 
            🔄 Bước 1: Lấy danh sách course ID từ order
            Ví dụ: order.courseId = "123", order.courseId = "456"
            Kết quả: [123, 456]
            */
            const enrolledCourseIds = [...new Set(orders.map(order => order.courseId || order.course_id))];

            /* 
            🔗 API CALL 2: Lấy tất cả khóa học
            Endpoint: /api/courses
            Dữ liệu: Danh sách tất cả courses
            */
            const coursesResponse = await fetch('/api/courses', { headers: { 'Authorization': `Bearer ${token}` } });
            if (!coursesResponse.ok) throw new Error('Failed to fetch courses.');
            const allCourses = await coursesResponse.json();

            /* 
            🎯 Bước 2: Lọc chỉ khóa học mà user đã mua
            Giống như lọc những cuốn sách bạn đã mua từ danh sách tất cả sách
            */
            const enrolledCourses = allCourses.filter(course => enrolledCourseIds.includes(course.id));

            if (enrolledCourses.length === 0) {
                enrolledListDiv.innerHTML = '<p class="text-gray-500">You are not enrolled in any courses yet.</p>';
                return;
            }

            /* 
            ✨ Bước 3: Hiển thị 3 khóa học đầu tiên
            Mỗi khóa học có:
