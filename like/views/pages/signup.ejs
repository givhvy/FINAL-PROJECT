    <script>
        /* 📱 DOM Elements - Lấy reference tới các HTML elements */
        const form = document.getElementById('signupForm');
        const passwordInput = document.getElementById('password');
        const togglePasswordBtn = document.getElementById('togglePassword');
        const passwordStrengthBar = document.getElementById('passwordStrength');
        const passwordFeedback = document.getElementById('passwordFeedback');
        const successMessage = document.getElementById('successMessage');
        const errorMessage = document.getElementById('errorMessage');

        /* 👁️ TOGGLE PASSWORD VISIBILITY - Bật/tắt hiển thị mật khẩu */
        togglePasswordBtn.addEventListener('click', function() {
            // Đổi type giữa password (ẩn) và text (hiện)
            const isPassword = passwordInput.type === 'password';
            passwordInput.type = isPassword ? 'text' : 'password'; // Toggle type
        });

        /* 💪 PASSWORD STRENGTH CHECKER - Kiểm tra độ mạnh mật khẩu khi gõ */
        passwordInput.addEventListener('input', function() {
            const password = this.value;
            let strength = 0;

            // ⭐ Kiểm tra từng điều kiện:
            if (password.length >= 8) strength += 25;           // Ít nhất 8 ký tự = 25%
            if (/[a-z]/.test(password)) strength += 25;         // Có chữ thường = 25%
            if (/[A-Z]/.test(password)) strength += 25;         // Có chữ hoa = 25%
            if (/[0-9!@#$%^&*]/.test(password)) strength += 25; // Có số hoặc ký tự đặc biệt = 25%

            // 🎨 Cập nhật thanh progress & màu sắc
            passwordStrengthBar.style.width = strength + '%';

            // Xác định level mạnh & đổi màu
            if (strength < 25) {
                passwordStrengthBar.style.backgroundColor = '#ef4444'; // Đỏ (yếu)
                passwordFeedback.textContent = 'Password is too weak';
            } else if (strength < 50) {
                passwordStrengthBar.style.backgroundColor = '#f59e0b'; // Cam/Vàng (trung bình)
                passwordFeedback.textContent = 'Password is weak';
            } else if (strength < 75) {
                passwordStrengthBar.style.backgroundColor = '#eab308'; // Vàng (bình thường)
                passwordFeedback.textContent = 'Password is good';
            } else {
                passwordStrengthBar.style.backgroundColor = '#22c55e'; // Xanh (mạnh)
                passwordFeedback.textContent = 'Password is strong';
            }
        });

        /* 🔘 SUBMIT FORM - Xử lý khi nhấn "Create Account" */
        form.addEventListener('submit', async function(e) {
            e.preventDefault(); // Ngăn form reload trang mặc định

            // 📝 Lấy dữ liệu từ form
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const name = firstName + ' ' + lastName; // Kết hợp first + last name

            const API_URL = '/api/auth/register'; // URL backend API

            try {
                // 🌐 Gửi POST request tới backend
                const response = await fetch(API_URL, {
                    method: 'POST',           // POST = gửi dữ liệu
                    headers: {
                        'Content-Type': 'application/json' // Kiểu dữ liệu là JSON
                    },
                    body: JSON.stringify({ name, email, password, role: 'student' })
                    // Gửi object JSON: tên, email, password, role=student
                });

                // 📝 Nhận response từ backend
                const data = await response.json();

                // ❌ Kiểm tra xem request có thành công không (status 200-299)
                if (!response.ok) {
                    throw new Error(data.error || 'Failed to create account.');
                }

                // ✅ KHI ĐĂNG KÝ THÀNH CÔNG:
                form.classList.add('hidden');                   // Ẩn form
                successMessage.classList.remove('hidden');      // Hiện success message

                // ⏱️ Tự động redirect tới login sau 2 giây
                setTimeout(() => {
                    window.location.href = '/login'; // Chuyển hướng browser
                }, 2000);

            } catch (error) {
                // ❌ KHI CÓ LỖI:
                console.error('Signup Error:', error);          // Log error tới console
                errorMessage.querySelector('p').textContent = 'Signup failed: ' + error.message;
                // Cập nhật thông báo lỗi
                errorMessage.classList.remove('hidden');        // Hiện error message
            }
        });
    </script>
